#pragma once
#ifndef __GOLD_STRUCT_ARRAY
#define __GOLD_STRUCT_ARRAY

#include <gold/bits/struct_array.hpp>

namespace gold::inline literals::inline struct_literals {

    /// string literal operator template - for string into 'struct_array'
    template <struct_array A>
    consteval auto operator""_fs() {
        return struct_array { A };
    }

} // namespace gold::inline literals::inline struct_literals

#endif // __GOLD_STRUCT_ARRAY
